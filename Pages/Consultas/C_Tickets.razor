@page "/TicketsConsultas"
@inject TicketsBLL TicketsBLL

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tickets Id</th>
            <th>Fecha</th>
            <th>Cliente Id</th>
            <th>Sistema Id</th>
            <th>Prioridad Id</th>
            <th>Solicitado por</th>
            <th>Asunto</th>
            <th>Descripcion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in L_Tickets)
        {
            <tr>
                <td>@item.TicketsId</td>
                <td>@item.Fecha</td>
                <td>@item.ClienteId</td>
                <td>@item.SistemaId</td>
                <td>@item.PrioridadId</td>
                <td>@item.SolicitadoPor</td>
                <td>@item.Asunto</td>
                <td>@item.Descripcion</td>
            </tr>
        }
    </tbody>
</table>

@code
{
    public List<Tickets> L_Tickets { get; set; } = new List<Tickets>();

    protected override void OnInitialized()
    {
        L_Tickets = TicketsBLL.Listar(c => true); 
    }
}